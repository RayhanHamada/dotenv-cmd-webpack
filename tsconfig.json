{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "allowJs": true,
    "declaration": true,
    "outDir": "dist",

    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
